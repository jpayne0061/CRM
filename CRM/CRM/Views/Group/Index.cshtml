@model CRM.Models.Group


<table class="table table-striped table-hover task-table-desktop">
    <thead>
        <tr>
            <th colspan="3" class="table-head-title">@Model.Name</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td><strong>@user.Name</strong></td>
                <td class="hide-midsize">@user.Email</td>
                <td><strong>Customers</strong>: @user.Customers.Count()</td>
                <td><strong>Active tasks</strong>: @user.Tasks.Where(t => t.IsComplete == false).Count()</td>
                <td><strong>Completed tasks</strong>: @user.Tasks.Where(t => t.IsComplete == true).Count()</td>
                <td><span class="glyphicon glyphicon-comment js-begin-chat-table" title="chat with this user" js-data-id="@user.Id" js-data-name="@user.Name"></span></td>
            </tr>
        }
    </tbody>
</table>

<table class="table-striped table-hover mobile-task-table">
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr class="mobile-task-row-title">
                <td>
                    <strong>@user.Name</strong>
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Email</strong>
                </td>
                <td>
                    @user.Email
                </td>
            </tr>
            <tr>
                <td>
                    <strong># Customers</strong>
                </td>
                <td>
                    @user.Customers.Count()
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Active Tasks</strong>
                </td>
                <td>
                    @user.Tasks.Where(t => t.IsComplete == false).Count()
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Completed Tasks</strong>
                </td>
                <td>
                    @user.Tasks.Where(t => t.IsComplete == true).Count()
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Chat</strong>
                </td>
                <td>
                    <span class="glyphicon glyphicon-comment js-begin-chat-table" title="chat with this user" js-data-id="@user.Id" js-data-name="@user.Name"></span>
                </td>
            </tr>

        }


    </tbody>
</table>


