@model CRM.ViewModels.TaskViewModel

<h2>Create Task</h2>


@using (Html.BeginForm("Create", "Tasks"))
{

    @Html.HiddenFor(m => m.AssignedBy)
    @Html.HiddenFor(m => m.CustomerId)
    <div class="form-group">
        @Html.LabelFor(m => m.Body)
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Body)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AssignedTo)
        @Html.DropDownListFor(m => m.AssignedTo, new SelectList(Model.Users, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AssignedTo)
    </div>

    <div class="form-group" style="position: relative">
        @Html.LabelFor(m => m.Deadline)
        @Html.TextBoxFor(m => m.Deadline, new { @class = "form-control datetimepicker"})
        @Html.ValidationMessageFor(m => m.Deadline)
    </div>

    <button type="submit" class="btn btn-primary submit-and-cancel">Save</button>
    <span class="btn btn-danger submit-and-cancel"> <a href="/Customer/Detail/@Model.CustomerId">Cancel</a></span>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
        
}