<body class="landing-body">
    <div class="overlay">
        <div class="text-and-logo"><img src="~/Content/img/feather.png" class="landing-page-logo" /><span class="fly-client-text">Fly Client</span></div>
        <span class="login-on-register-page">Already registered? @Html.ActionLink("Login", "Login", "Account")</span>
        


        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 register-form">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <span id="register-header">Register</span>

                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control sign-up-input", placeholder = Html.DisplayNameFor(m => m.Name) })
                        @*@Html.ValidationMessageFor(m => m.Name)*@
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control sign-up-input", placeholder = Html.DisplayNameFor(m => m.Email) })
                        @*@Html.ValidationMessageFor(m => m.Email)*@
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Group, new { @class = "form-control sign-up-input", placeholder = Html.DisplayNameFor(m => m.Group) })
                        @*@Html.ValidationMessageFor(m => m.Group)*@
                    </div>

                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control sign-up-input", placeholder = Html.DisplayNameFor(m => m.Password) })

                    </div>

                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control sign-up-input", placeholder = Html.DisplayNameFor(m => m.ConfirmPassword) })
                        @*@Html.ValidationMessageFor(m => m.ConfirmPassword)*@
                    </div>

                    <div class="form-group">
                        @Html.DropDownListFor(m => m.Role, new SelectList(Model.Roles, "Name", "Name"), "", new { @class = "form-control sign-up-input", placeholder = Html.DisplayNameFor(m => m.Role) })
                        @*@Html.ValidationMessageFor(m => m.Role)*@
                    </div>

                    <div class="form-group">

                        <input type="submit" class="btn btn-primary register-button-landing" value="Register" id="" />

                    </div>
                    <p>
                        @Html.ActionLink("Go to login page", "Login")
                    </p>
                }

            </div>
            @*<div class="col-md-4 error-column form-horizontal">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>*@
    </div>

</div>

