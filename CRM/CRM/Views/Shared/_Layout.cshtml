    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

