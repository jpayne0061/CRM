@model CRM.ViewModels.CustomerViewModel

<h2>Add Team Members for @Model.Name</h2>


@using (Html.BeginForm("AddTeam", "Customer"))
{

    @Html.HiddenFor(m => m.TransferId)
    <label>Select Team Members</label>
    for (var i = 0; i < Model.UserCheckBoxes.Count; i++)
    {
        <div id="create-form-input-checks">
            @Html.HiddenFor(m => m.UserCheckBoxes[i].Name)

            @Html.CheckBoxFor(m => m.UserCheckBoxes[i].Checked, new { @class = "form-control" })
            @Html.LabelFor(m => m.UserCheckBoxes[i].Name, Model.UserCheckBoxes[i].Name)
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
}