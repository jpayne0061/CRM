@model CRM.Models.Customer


<div class="container">
    <div class="row">
        <div class="col-md-8 col-xs-12">

            <div class="row">
                <div class="col-md-6 col-xs-12">

                    <div>
                        <h3 class="name-header">@Model.Name</h3>

                        <div>Phone: @Model.Phone</div>
                        <div>Email: @Model.Email</div>

                    </div>

                </div>
                <div class="col-md-6 col-xs-12">

                    @if (Model.Team.Count == 0)
                    {
                        @Html.ActionLink("Add Team Members", "AddTeam", "Customer", new { id = Model.Id }, new { @class = "btn btn-default", id= "team-button" })
                    }
                    else
                    {
                        <div>
                            <h3 class="team-header">Team</h3>
                            @foreach (var member in Model.Team)
                            {
                                <div class="btn btn-default">@member.Name</div>
                            }


                        </div>
                    }



                </div>

            </div>
            <hr class="divider-hr" />


            <table class="table table-striped table-hover ">
                <col style="width:15%">
                <col style="width:50%">
                <col style="width:23%">
                <col style="width:12%">
                <thead>
                    <tr>
                        <th colspan="3" class="table-head-title">Tasks</th>

                        @*<th></th>*@

                        <th>@Html.ActionLink("Add Task", "Create", "Tasks", new { id = Model.Id }, new { @class = "btn btn-info" })</th>
                    </tr>
                    @*<tr>
                            <th>Body</th>
                            <th>Author</th>

                        </tr>*@
                </thead>
                <tbody>
                    @foreach (var task in Model.Tasks)
                    {
                        <tr>

                            <td>
                                <div>@task.Deadline</div>
                            </td>

                            <td>
                                @task.Body
                            </td>

                            <td>
                                <div>Assigned By: @task.AssignedBy.Name</div>
                                <div>Assigned To: @task.AssignedTo.Name</div>
                            </td>

                            <td class="glyph-cell">

                                <span class="glyphicon glyphicon-pencil"></span>
                                <span class="glyphicon glyphicon-trash"></span>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.Tasks.Count == 0)
            {
                <h4>There are no tasks assigned at this time</h4>
            }






        </div>
        <div class="col-md-4 col-xs-12">
            <table class="table table-striped table-hover ">
                <col style="width:65%">
                <col style="width:15%">
                <col style="width:20%">
                <thead>
                    <tr>
                        <th class="table-head-title">Messages</th>
                        <th>@Html.ActionLink("Add Message!", "Create", "Messages", new { id = Model.Id }, new { @class = "btn btn-info" })</th>
                        <th class="glyph-cell"></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var message in Model.Messages)
                    {
                        <tr>

                            <td>@message.Body</td>
                            <td>@message.Author.Name</td>
                            <td class="glyph-cell">

                                <span class="glyphicon glyphicon-pencil"> </span>
                                <span class="glyphicon glyphicon-trash"> </span>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            @if (Model.Messages.Count == 0)
            {
                <h4>There are no messages at this time</h4>
            }


        </div>
    </div>
</div>



